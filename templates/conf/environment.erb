# This environment file is managed by puppet. Manual changes to it will be
# overwritten on the next run.

# Some docs:
# http://my.safaribooksonline.com/book/databases/storage-systems/9781849517140/1dot-setting-up-hbase-cluster/id286753149

NAME=zookeeper
ZOOCFGDIR=<%= @cfg_dir %>

# What jars are required?
# Log4j needs the log4j.properties file in the classpath
CLASSPATH="$ZOOCFGDIR:/usr/share/java/jline.jar:/usr/share/java/log4j-1.2.jar:/usr/share/java/xercesImpl.jar:/usr/share/java/xmlParserAPIs.jar:/usr/share/java/netty.jar:/usr/share/java/slf4j-api.jar:/usr/share/java/slf4j-log4j12.jar:/usr/share/java/zookeeper.jar"

ZOOCFG="$ZOOCFGDIR/zoo.cfg"
ZOO_LOG_DIR=/var/log/$NAME
USER=<%= @user %>
GROUP=<%= @group %>
PIDDIR=/var/run/zookeeper
PIDFILE=/var/run/zookeeper/zookeeper.pid
SCRIPTNAME=/etc/init.d/$NAME
JAVA=<%= @java_bin %>
ZOOMAIN="<%= @zoo_main %>"
ZOO_LOG4J_PROP="<%= @log4j_prop %>"
JMXLOCALONLY=false
JAVA_OPTS="<%= @java_opts %> <%= @heap_opts %>"